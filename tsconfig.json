{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "build",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
  ]
}
